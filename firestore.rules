rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - read by all authenticated users, write only own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Friend requests - read/write if you're involved (sender or receiver)
    match /friendRequests/{requestId} {
      allow read: if request.auth != null && 
        (resource.data.from == request.auth.uid || 
         resource.data.to == request.auth.uid);
      allow create: if request.auth != null && 
        request.resource.data.from == request.auth.uid;
      allow update, delete: if request.auth != null && 
        (resource.data.from == request.auth.uid || 
         resource.data.to == request.auth.uid);
    }
    
    // All other collections (stats, progress, etc.) - users can read/write their own data
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
